<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spalsh_screen"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/weatherWallPaper"
        android:layout_width="211dp"
        android:layout_height="140dp"
        android:layout_marginTop="236dp"
        android:src="@drawable/white_cloud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather Matters \n And we've got details"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="@+id/weatherWallPaper"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/weatherWallPaper"
        app:layout_constraintTop_toBottomOf="@+id/weatherWallPaper"
        android:fontFamily="@font/merriweathersans_bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>